        <div class="social-btns">
          <a href="https://www.facebook.com/DesignYourMusicEvents/" target="_blank"><img src="/images/logo_facebook.svg" alt="facebook"></a>
          <a href="https://www.instagram.com/dymemusic/" target="_blank"><img src="/images/logo_instagram.svg" alt="instagram"></a>
          <a href="https://www.matrimonio.com/musica-matrimonio/dyme-music--e155305" target="_blank"><img src="/images/logo_matrimoni.svg" alt="matrimoni.it"></a>
          <a href="https://www.linkedin.com/in/dyme-music-agency-286301126/" target="_blank"><img src="/images/logo_linkedin.svg" alt="linkedin"></a>
        </div>
        <a href="mailto:dyme.music@gmail.com" target="_blank" class="email-link">dyme.music@gmail.com <div class="icon-arrow arrow-card"></div></a>
      </div>
      <div class="card-container">
        <%= partial(:'partials/card-contact', :locals => {
          :cardTitle => "LORENZO<br>BONGIOVANNI",
          :bgImg => "/images/lorenzo-bongiovanni.jpg",
          :phone => "+39 393 485 7805"
        }) %>
        <%= partial(:'partials/card-contact', :locals => {
